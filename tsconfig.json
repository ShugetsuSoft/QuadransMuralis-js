{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"],
            "@": ["src"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "lib": [
        "dom",
        "esnext",
        "es6",
    ]
}